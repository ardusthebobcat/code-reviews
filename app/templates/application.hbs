<div class="ui borderless menu">
  <div class="ui container">
    <div class="item">
      <h1 class="ui header">
        {{#link-to 'index'}}Code Reviews{{/link-to}}
      </h1>
    </div>
    {{#if session.isAuthenticated}}
    <div class="item">
      {{#link-to 'add-review'}}Add a Review{{/link-to}}
    </div>
    {{/if}}
    <div class="ui right item">
      {{#if session.isAuthenticated}}
        Logged in as {{model.username}}
        <button {{action "signOut"}}>Sign out</button>
      {{else}}
        {{#link-to 'login'}}Sign in{{/link-to}}
      {{/if}}
    </div>
  </div>
</div>

<div class="ui container">
  {{outlet session=session}}
</div>
